# HyreBuy Backend - Production Environment Variables
# Copy this to Vercel Environment Variables

# Application
APP_NAME=HyreBuy API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Database (Vercel PostgreSQL)
DATABASE_URL=your_vercel_postgres_url_here

# Redis (Upstash)
REDIS_URL=your_upstash_redis_url_here

# JWT Authentication
SECRET_KEY=your_production_secret_key_here_use_openssl_rand_hex_32

# CORS - Add your frontend domain
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# External APIs
OSRM_API_URL=https://router.project-osrm.org

# Email
EMAIL_FROM=noreply@hyrebuy.com

# Logging
LOG_LEVEL=INFO
