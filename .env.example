# HyreBuy Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=HyreBuy API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
# Example: postgresql+asyncpg://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres

# Redis (Upstash)
REDIS_URL=redis://default:YOUR_PASSWORD@redis-xxxxx.upstash.io:6379
# Get from: https://console.upstash.com

# JWT Authentication
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7

# CORS (Frontend URL)
ALLOWED_ORIGINS=http://localhost:3000,https://hyrebuy.vercel.app

# External APIs
OSRM_API_URL=https://router.project-osrm.org

# Email (SendGrid or AWS SES)
EMAIL_FROM=noreply@hyrebuy.com
SENDGRID_API_KEY=your-sendgrid-api-key-here
# Or use SMTP:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# Logging
LOG_LEVEL=INFO
